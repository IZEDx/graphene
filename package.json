{
  "name": "graphene-cms",
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npm run bootstrap && npx lerna run build",
    "build:api": "cd ./packages/api && npm run build",
    "build:ui": "cd ./packages/ui && npm run build",
    "dev": "npm run bootstrap && (npm run dev:ui & npm run dev:api)",
    "dev:api": "cd ./packages/api && npm run dev",
    "dev:ui": "cd ./packages/ui && npm run dev",
    "test": "npx lerna run test",
    "start": "node bin/graphene-cms.js",
    "start:dev": "nodemon --watch packages/api/dist npm start",
    "typesync": "npx typesync"
  },
  "dependencies": {
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@stencil/core": "latest",
    "@stencil/router": "latest",
    "@stencil/sass": "latest",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-jwt": "^0.0.42",
    "@types/graphql": "^14.0.7",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^13.7.0",
    "@types/nodemon": "^1.19.0",
    "@types/object-hash": "^1.3.1",
    "@types/sqlite3": "^3.1.6",
    "apollo-server-express": "^2.9.16",
    "bulma": "latest",
    "bulma-dashboard": "^0.3.1",
    "bulma-switch": "^2.0.0",
    "chalk": "latest",
    "change-case": "^4.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "graphql": "^14.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.0-beta.2",
    "graphql-import-node": "0.0.4",
    "graphql-request": "^1.8.2",
    "lerna": "latest",
    "nodemon": "^2.0.2",
    "object-hash": "^2.0.1",
    "parcel": "latest",
    "reflect-metadata": "^0.1.13",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "stencil-quantum": "alpha",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.22",
    "typescript": "latest",
    "typesync": "latest"
  },
  "peerDependencies": {
    "sqlite3": "^4.1.1"
  }
}
