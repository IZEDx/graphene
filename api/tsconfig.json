{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "declaration": true,
      "experimentalDecorators": true,
      "lib": [
        "dom",
        "esnext"
      ],
      "moduleResolution": "node",
      "module": "esnext",
      "target": "es2017",
      "strict": true,
      "outDir": "dist",
      "emitDeclarationOnly": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "../node_modules/"
    ]
}
  